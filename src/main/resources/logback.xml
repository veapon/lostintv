<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%5level [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.veapon.jent.*">
        <level value="INFO"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>

</configuration>
